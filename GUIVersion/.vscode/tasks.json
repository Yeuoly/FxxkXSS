{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "electron-debug",
        "type": "process",
        "command": "./node_modules/.bin/vue-cli-service.cmd",
        "windows": {
          "command": "./node_modules/.bin/vue-cli-service.cmd"
        },
        "isBackground": true,
        "args": ["electron:serve", "--debug"],
        "problemMatcher": {
          "owner": "custom",
          "pattern": {
            "regexp": ""
          },
          "background": {
            "beginsPattern": "Starting development server\\.\\.\\.",
            "endsPattern": "Not launching electron as debug argument was passed\\."
          }
        }
      }
    ]
  }